<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: {class: 'measure center mv4'}) do |f| %>
  <fieldset id="sign_in" class="ba b--transparent ph0 mh0">
    <legend class="f3 fw6 ph0 mh0">Send reset password instructions?</legend>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt3">
      <%= f.label :email, class: "db fw6 lh-copy f5" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "pa2 input-reset ba bg-transparent w-100" %>
    </div>

  </fieldset>
  
  <div class="submit-field mt2">
    <%= f.submit "Send", class: "b ph3 pv2 input-reset ba b--black-70 black-70 bg-transparent grow pointer f5 dib" %>
  </div>
  
  <%= render "devise/shared/links" %>

<% end %>

