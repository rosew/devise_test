<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, html: {class: 'measure center mv4'}) do |f| %>

  <fieldset id="sign_in" class="ba b--transparent ph0 mh0">
    <legend class="f3 fw6 ph0 mh0">Change your password</legend>

    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mv3">
      <%= f.label :password, "New password", class: "db fw6 lh-copy f5" %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "b pa2 input-reset ba bg-transparent w-100" %>
    </div>

    <div class="mv3">
      <%= f.label :password_confirmation, class: "db fw6 lh-copy f5" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "b pa2 input-reset ba bg-transparent w-100" %>
    </div>
  
  </fieldset>

  <div class="submit-field">
    <%= f.submit "Sign up", class: "b ph3 pv2 input-reset ba b--black-70 black-70 bg-transparent grow pointer f5 dib" %>
  </div>
  
  <%= render "devise/shared/links" %>

<% end %>
